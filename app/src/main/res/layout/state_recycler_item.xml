<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="340dp"
    android:layout_height="170dp"
    android:layout_marginBottom="26dp"
    android:background="@drawable/state_background"
    android:scrollbarSize="15sp">

    <TextView
        android:id="@+id/state_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/allegra"
        android:text="@string/block_header"
        android:textColor="@color/buttom"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/state_text2"
        android:layout_width="150dp"
        android:layout_height="36dp"
        android:fontFamily="@font/allegra"
        android:text="@string/brief_description_of_the_block_with_two_lines"
        android:textColor="@color/buttom"
        app:layout_constraintStart_toStartOf="@+id/state_text"
        app:layout_constraintTop_toBottomOf="@+id/state_text" />

    <ImageView
        android:id="@+id/state_image"
        android:layout_width="168dp"
        android:layout_height="111dp"
        android:layout_marginStart="175dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="77dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/state_img01"
        android:contentDescription="TODO" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/state_button"
        android:layout_width="138dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/state_buttom"
        android:text="Подробнее"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/state_text"
        app:layout_constraintStart_toStartOf="@+id/state_text2"
        app:layout_constraintTop_toBottomOf="@+id/state_text2" />
</androidx.constraintlayout.widget.ConstraintLayout>